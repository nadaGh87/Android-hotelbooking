<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity_profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="30sp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="#993968"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Name: Nadoush"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Email: nada@example.com"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Phone:+21655009993" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:backgroundTint="#4E2B3C"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnViewBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Bookings"
        android:backgroundTint="#4E2B3C"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnBookRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book a Room"
        android:backgroundTint="#4E2B3C"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="#E70841" />

</LinearLayout>